<div class="news-content clearfix">
    <div class="row">
        <div class="col">
            <h3 n:ifcontent>{$heading}</h3>
        </div>
    </div>

    <div class="row mb-3" n:foreach="$news as $n">
        <div class="col">
            <div class="card">
                <div class="card-body pb-1">{$n->getText()|noescape}</div>
                <div class="card-footer">
                    {if $n->isPinned()}
                        <i class="fa fa-thumb-tack"></i>
                    {/if}
                    {$n->getPublished()|date:'j. n. Y'}
                </div>
            </div>
        </div>
    </div>
</div>